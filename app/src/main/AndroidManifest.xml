<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="groupo.travellight.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-sdk android:minSdkVersion="19" />

        <activity
            android:name="groupo.travellight.app.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="groupo.travellight.app.MainScreen"
            android:label="MainScreen" >
        </activity>
        <activity
            android:name="groupo.travellight.app.HelpActivity"
            android:label="HelpActivity" >
        </activity>
        <activity
            android:name="groupo.travellight.app.NotificationsActivity"
            android:label="Notifications" >
        </activity>
        <activity
            android:name="groupo.travellight.app.YelpSearch"
            android:label="@string/title_activity_yelp_search"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PackingListActivity"
            android:label="Packing List" >
            </activity>
        <activity android:uiOptions="splitActionBarWhenNarrow"
            android:name="groupo.travellight.tabs.ScreenWithSwitchingTabs">

        </activity>
    </application>

</manifest>
