<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="groupo.travellight.app" >
    <uses-sdk android:minSdkVersion="7"
        android:targetSdkVersion="18"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >


        <activity
            android:name="groupo.travellight.app.LoginActivity"
            android:label="@string/app_name" >
             <!-- main, launcher stuff goes here-->
        </activity>
        <activity
            android:name="groupo.travellight.app.login"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="groupo.travellight.app.MainScreen"
            android:label="MainScreen" >
        </activity>

        <activity
            android:name="groupo.travellight.app.HelpActivity"
            android:label="HelpActivity">
        </activity>
    </application>

</manifest>
